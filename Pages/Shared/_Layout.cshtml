<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrendyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header-section">
        <!-- Top Bar -->
        <div class="top-bar bg-light py-2">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <span class="text-muted small">
                            <i class="fas fa-truck me-2"></i>Ücretsiz Kargo - 150 TL ve Üzeri Alışverişlerde
                        </span>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="#" class="text-decoration-none me-3 small">
                            <i class="fas fa-mobile-alt me-1"></i>Mobil Uygulamayı İndir
                        </a>
                        <a href="#" class="text-decoration-none small">
                            <i class="fas fa-headset me-1"></i>Müşteri Hizmetleri
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Header -->
        <div class="main-header bg-white shadow-sm py-3">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Logo -->
                    <div class="col-lg-2 col-md-3">
                        <a class="navbar-brand fw-bold fs-3 text-primary" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-shopping-bag me-2"></i>TrendyShop
                        </a>
                    </div>

                    <!-- Search Bar -->
                    <div class="col-lg-6 col-md-5">
                        <div class="search-container position-relative">
                            <input type="text" class="form-control form-control-lg border-0 bg-light rounded-pill ps-4 pe-5"
                                   placeholder="Aradığınız ürünü yazın...">
                            <button class="btn btn-primary position-absolute end-0 top-0 bottom-0 rounded-pill px-3">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                    <!-- User Actions -->
                    <div class="col-lg-4 col-md-4">
                        <div class="d-flex align-items-center justify-content-end gap-3">
                            <a href="#" class="text-decoration-none text-dark">
                                <i class="far fa-heart fs-5"></i>
                                <small class="d-block">Favorilerim</small>
                            </a>
                            <a href="#" class="text-decoration-none text-dark">
                                <i class="far fa-user fs-5"></i>
                                <small class="d-block">Hesabım</small>
                            </a>
                            <a href="#" class="text-decoration-none text-primary position-relative">
                                <i class="fas fa-shopping-cart fs-5"></i>
                                <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill" style="font-size: 0.6rem;">3</span>
                                <small class="d-block text-dark">Sepetim</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Navigation -->
        <nav class="category-nav bg-primary py-2">
            <div class="container">
                <div class="d-flex align-items-center">
                    <div class="dropdown me-4">
                        <button class="btn btn-light dropdown-toggle fw-semibold" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-bars me-2"></i>Tüm Kategoriler
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-tshirt me-2"></i>Kadın Giyim</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-tie me-2"></i>Erkek Giyim</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-baby me-2"></i>Çocuk & Bebek</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-home me-2"></i>Ev & Yaşam</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-laptop me-2"></i>Elektronik</a></li>
                        </ul>
                    </div>
                    <div class="d-flex gap-4">
                        <a href="#" class="text-white text-decoration-none">Kadın</a>
                        <a href="#" class="text-white text-decoration-none">Erkek</a>
                        <a href="#" class="text-white text-decoration-none">Çocuk</a>
                        <a href="#" class="text-white text-decoration-none">Ev & Yaşam</a>
                        <a href="#" class="text-white text-decoration-none">Süpermarket</a>
                        <a href="#" class="text-white text-decoration-none">Kozmetik</a>
                        <a href="#" class="text-white text-decoration-none">Ayakkabı</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-section bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-3">TrendyShop</h5>
                    <p class="small">Türkiye'nin en büyük online alışveriş sitesi. Milyonlarca ürün, hızlı teslimat ve güvenli alışveriş!</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook fs-5"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fs-5"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter fs-5"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-youtube fs-5"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-semibold mb-3">Kurumsal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none small">Hakkımızda</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Kariyer</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">İletişim</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Başarı Hikayeleri</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-semibold mb-3">Yardım</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none small">Sıkça Sorulan Sorular</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Canlı Yardım</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">İptal & İade</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Kargo & Teslimat</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-semibold mb-3">Güvenli Alışveriş</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none small">Güvenlik</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Gizlilik</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Kullanım Koşulları</a></li>
                        <li><a href="#" class="text-light text-decoration-none small">Çerez Politikası</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-12 mb-4">
                    <h6 class="fw-semibold mb-3">Mobil Uygulamalar</h6>
                    <div class="d-flex gap-2">
                        <img src="https://via.placeholder.com/120x40/000000/FFFFFF?text=App+Store" alt="App Store" class="img-fluid">
                        <img src="https://via.placeholder.com/120x40/000000/FFFFFF?text=Google+Play" alt="Google Play" class="img-fluid">
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-6">
                    <p class="small mb-0">&copy; 2025 TrendyShop. Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <img src="https://via.placeholder.com/40x25/0000FF/FFFFFF?text=VISA" alt="Visa" class="me-2">
                    <img src="https://via.placeholder.com/40x25/FF0000/FFFFFF?text=MC" alt="Mastercard" class="me-2">
                    <img src="https://via.placeholder.com/40x25/00AA00/FFFFFF?text=TROY" alt="Troy">
                </div>
            </div>
        </div>
    </footer>

    <!-- AI Assistant Widget -->
    <div class="ai-assistant-widget">
        <!-- Floating Button -->
        <button class="ai-float-btn" id="aiToggleBtn" title="AI Asistan">
            <i class="fas fa-robot"></i>
            <span class="ai-notification-badge">AI</span>
        </button>

        <!-- AI Panel -->
        <div class="ai-panel" id="aiPanel">
            <div class="ai-panel-header">
                <div class="d-flex align-items-center">
                    <div class="ai-avatar me-2">
                        <i class="fas fa-robot text-primary"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold">TrendyAI Asistan</h6>
                        <small class="text-muted">Kombin önerisi & Akıllı filtreleme</small>
                    </div>
                </div>
                <button class="btn-close" id="aiCloseBtn"></button>
            </div>

            <div class="ai-panel-body">
                <!-- Tab Navigation -->
                <ul class="nav nav-pills ai-tabs mb-3" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="combo-tab" data-bs-toggle="pill" data-bs-target="#combo-panel" type="button">
                            <i class="fas fa-tshirt me-1"></i>Kombin Öner
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="filter-tab" data-bs-toggle="pill" data-bs-target="#filter-panel" type="button">
                            <i class="fas fa-filter me-1"></i>Akıllı Filtre
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content">
                    <!-- Kombin Önerme Panel -->
                    <div class="tab-pane fade show active" id="combo-panel">
                        <div class="ai-section">
                            <h6 class="ai-section-title">
                                <i class="fas fa-magic me-2 text-primary"></i>Kombin Önerisi Al
                            </h6>
                            <div class="combo-options">
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <button class="btn btn-outline-primary btn-sm w-100 combo-btn" data-occasion="casual">
                                            <i class="fas fa-coffee me-1"></i>Günlük
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-outline-primary btn-sm w-100 combo-btn" data-occasion="business">
                                            <i class="fas fa-briefcase me-1"></i>İş
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-outline-primary btn-sm w-100 combo-btn" data-occasion="party">
                                            <i class="fas fa-glass-cheers me-1"></i>Parti
                                        </button>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-outline-primary btn-sm w-100 combo-btn" data-occasion="sport">
                                            <i class="fas fa-running me-1"></i>Spor
                                        </button>
                                    </div>
                                </div>

                                <div class="preference-inputs">
                                    <select class="form-select form-select-sm mb-2" id="budgetSelect">
                                        <option value="">Bütçe Aralığı</option>
                                        <option value="0-200">0-200 TL</option>
                                        <option value="200-500">200-500 TL</option>
                                        <option value="500-1000">500-1000 TL</option>
                                        <option value="1000+">1000+ TL</option>
                                    </select>

                                    <select class="form-select form-select-sm mb-3" id="colorSelect">
                                        <option value="">Renk Tercihi</option>
                                        <option value="black">Siyah Tonları</option>
                                        <option value="blue">Mavi Tonları</option>
                                        <option value="red">Kırmızı Tonları</option>
                                        <option value="neutral">Nötr Renkler</option>
                                        <option value="colorful">Renkli</option>
                                    </select>
                                </div>

                                <button class="btn btn-primary w-100 mb-3" id="generateComboBtn">
                                    <i class="fas fa-sparkles me-2"></i>Kombin Öner
                                </button>
                            </div>

                            <!-- Combo Results -->
                            <div class="combo-results" id="comboResults" style="display: none;">
                                <div class="ai-message mb-3">
                                    <div class="ai-avatar-small">
                                        <i class="fas fa-robot text-primary"></i>
                                    </div>
                                    <div class="ai-message-content">
                                        <p class="mb-1">İşte size özel kombin önerim! 🎯</p>
                                        <div class="combo-suggestion" id="comboSuggestion">
                                            <!-- AI generated combo will appear here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Akıllı Filtreleme Panel -->
                    <div class="tab-pane fade" id="filter-panel">
                        <div class="ai-section">
                            <h6 class="ai-section-title">
                                <i class="fas fa-brain me-2 text-success"></i>Akıllı Arama
                            </h6>

                            <div class="ai-search-input mb-3">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="aiSearchInput"
                                           placeholder="Örn: 'Kışlık, sıcak tutan, 300 TL altı mont'">
                                    <button class="btn btn-success" id="aiSearch">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="quick-filters mb-3">
                                <small class="text-muted d-block mb-2">Hızlı Filtreler:</small>
                                <div class="d-flex flex-wrap gap-1">
                                    <span class="badge bg-light text-dark filter-tag" data-filter="trending">Trend Ürünler</span>
                                    <span class="badge bg-light text-dark filter-tag" data-filter="discount">İndirimli</span>
                                    <span class="badge bg-light text-dark filter-tag" data-filter="new">Yeni Gelenler</span>
                                    <span class="badge bg-light text-dark filter-tag" data-filter="bestseller">Çok Satan</span>
                                </div>
                            </div>

                            <!-- Search Results -->
                            <div class="ai-search-results" id="aiSearchResults" style="display: none;">
                                <div class="ai-message">
                                    <div class="ai-avatar-small">
                                        <i class="fas fa-robot text-success"></i>
                                    </div>
                                    <div class="ai-message-content">
                                        <p class="mb-1">Arama sonuçlarınız hazır! 🔍</p>
                                        <div id="searchResultsList">
                                            <!-- Search results will appear here -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- AI Panel Footer -->
            <div class="ai-panel-footer">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i>AI ile güçlendirilmiş kişisel asistan
                </small>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/ai-assistant.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
